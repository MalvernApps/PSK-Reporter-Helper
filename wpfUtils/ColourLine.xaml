<UserControl xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="wpfUtils.ColourLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfUtils"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid Background="LightGray">
        <StackPanel Orientation="Horizontal">
            <Label Width="120" Background="LightGray" x:Name="myName" >A line: </Label>
            <xctk:ColorPicker Margin="10,0,0,0"  Height="20" Width="100" HorizontalAlignment="Right" SelectedColorChanged="colchnaged" x:Name="myColour"/>
        </StackPanel>
    </Grid>
</UserControl>

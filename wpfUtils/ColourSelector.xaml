<Window x:Class="wpfUtils.ColourSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfUtils"
        mc:Ignorable="d"
        Title="Colour Selector" Height="450" Width="300">
    <Grid Background="LightGray">
        <GroupBox Header="App Colours" Margin="10,10,10,75" BorderThickness="2" BorderBrush="Black">
            <StackPanel Orientation="Vertical" x:Name="stacker">


            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">

            <StackPanel Orientation="Horizontal">
                <Label x:Name="NewName" VerticalAlignment="Center" Margin="10,0,0,0">New Name</Label>
            <TextBox x:Name="newcolor" SpellCheck.IsEnabled="True"  Width="200" Height="30" Margin="10" HorizontalAlignment="Left"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Width="80" Margin="10,5,0,5" Click="btnAdd">Add</Button>
                <Button Width="80" Margin="10,5,0,5" Click="btnCancel">Close</Button>
                <Button Width="80" Margin="10,5,0,5" Click="btnSave">Save</Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
